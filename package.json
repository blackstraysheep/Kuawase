{
  "name": "kuawase",
  "version": "0.7.0",
  "description": "Kuawase is a software application that assists in organizing competitions in the “Kuawase style” by pairing haiku, tanka, or other short-form poems.",
  "homepage": "https://github.com/blackstraysheep/Kuawase#readme",
  "bugs": {
    "url": "https://github.com/blackstraysheep/Kuawase/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blackstraysheep/Kuawase.git"
  },
  "license": "ISC",
  "author": "BlackStraySheep",
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "start": "chcp 65001 && electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "dist": "electron-builder"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "axios": "^1.11.0",
    "dompurify": "^3.2.6",
    "electron-log": "^5.4.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.6.2",
    "log": "^6.3.2",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.2/xlsx-0.20.2.tgz"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.0",
    "@electron-forge/maker-deb": "^7.8.0",
    "@electron-forge/maker-rpm": "^7.8.0",
    "@electron-forge/maker-squirrel": "^7.8.0",
    "@electron-forge/maker-zip": "^7.8.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.0",
    "@electron-forge/plugin-fuses": "^7.8.0",
    "@electron-forge/publisher-github": "^7.8.0",
    "@electron/fuses": "^1.8.0",
    "electron": "^28.3.3",
    "electron-builder": "^26.0.12",
    "prettier": "3.5.3",
    "update-electron-app": "^3.1.1"
  },
  "build": {
    "appId": "com.blackstraysheep.kuawase",
    "icon": "img/icon.ico",
    "publish": [
      {
        "provider": "github",
        "owner": "blackstraysheep",
        "repo": "Kuawase"
      }
    ],
    "files": [
      "data/**/*",
      "css/**/*",
      "js/**/*",
      "img/**/*",
      "locales/**/*",
      "top.html",
      "index.html",
      "1.html",
      "2.html",
      "3.html",
      "4.html",
      "5.html",
      "splash.html",
      "top.js",
      "index.js",
      "battle.js",
      "home.html",
      "home.js",
      "home.css",
      "preload.js",
      "main.js",
      "renderer.js",
      "!forge.config.js",
      "!Kuawase-icon/**/*"
    ],
    "directories": {
      "output": "out"
    },
    "win": {
      "target": "nsis",
      "icon": "img/icon.ico"
    }
  }
}
